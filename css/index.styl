@import "reset.css"
@import "mixins.styl"


#app
  width 100%
  height: 100%;
  background: #f5f5f5;
  position: relative;
  #content
    width 100%
    height 100%
    box-sizing border-box
    >section
      display none
      padding-top 45px
      padding-bottom 50px
      box-sizing border-box
      &.on
        display block
      &:nth-child(1)
        .swiper-container
          width 100%
          height 200px
          bottom-border-1px(#ccc)
        .swiper-wrapper
          height 100%
          background white
          .swiper-slide
            height 100%
            width 100%
            background white
            li
              width 25%
              float left
              display flex
              flex-direction column
              align-items center
              margin 10px 0
              img
                width 50%
                height 50%
        .msite-header
          position fixed
          top 0
          left 0
          z-index 5
          width 100%
          height 45px
          background #02a774
          display flex
          align-items center
          justify-content space-around
        a:nth-child(1)
          .icon-sousuo
            position absolute
            left 15px
            top 30%
            color #fff
            font-size 24px
        a:nth-child(2)
          span
            font-size 18px
            width 50%
            position absolute
            left 50%
            top 50%
            transform translate(-50%, -50%)
            display block
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            color #fff
        a:nth-child(3)
          display inline-block
          font-size 14px
          position absolute
          right 20px
          top 50%
          transform translateY(-50%)
          span
            color #fff
        .msite-shop-list
          background #fff
          margin-top 10px
          border-top 1px solid #eee
        .shop-header
          padding-left 10px
          font-size 14px
          color #999
        .shop-list
          width 100%
        clearFix()
        .shop-li
          position relative
          width 100%
          padding-left 10px
          padding-top 10px
          box-sizing border-box
          clearFix()
          .shop-left
            float left
            padding-right 10px
            width 23%
            height 75px
            box-sizing border-box
            img
              height  100%
          .shop-right
            float left
            width 77%
            .shop-title
              width 100%
              position relative
              clearFix()
              span
                float left
                display block
                white-space nowrap
                overflow hidden
                text-overflow ellipsis
                width 140px
                color #000
                font-size 16px
                font-weight bold
                &:before
                  display inline-block
                  content '品牌'
                  background #ffd930
                  font-size 14px
                  margin-right 4px
              .shop-detail-ul
                float right
                margin-left -50px
                li
                  font-size 10px
                  color #999
                  float left
                  padding 2px
                  border 1px solid #f1f1f1
            .shop-rating-order
              float left
              width 100%
              margin 10px 0
              .shop-rating-order-left
                float left
                .stars
                  float left
                  .star
                    display inline-block
                    width 10px
                    height 10px
                    background-size 10px 10px
                    &.on
                      bg-image('../images/stars/star_on')
                    &.half
                      bg-image('../images/stars/star_half')
                    &.off
                      bg-image('../images/stars/star_off')

                .rating-section
                  float left
                  color #ff6000
                  margin 0 5px
                .order-right
                  float left
                  font-size 10px
                  transform scale(0.9)
              .shop-rating-order-right
                float right
                .delivery-style
                  float left
                  display inline-block
                  font-size 8px
                  padding 2px
                  transform scale(0.8)
                  border-radius 2px
                  &.delivery-left
                    color #fff
                    background #02a774
                  &.delivery-right
                    color #02a774
                    border 1px solid #02a774
            .shop-distance
              float left
              color #666
              transform scale(0.9)
              .segmentation
                margin 0 3px

      &:nth-child(2)
        .header
          position fixed
          top 0
          left 0
          z-index 5
          width 100%
          height 45px
          background #02a774
          display flex
          align-items center
          justify-content space-around
          color white
          font-size 22px
        .search-form
          background #fff
          padding 12px 8px
          .search-input
            outline none
            border-radius 4px
            padding 0 4px
            font-weight bold
            width 79%
            background-color #f2f2f2
            font-size 14px
            color #333
            height 35px

          .search-button
            border-radius 2px
            width 20%
            height 35px
            background #02a774
            color white
            font-size 16px
            font-weight bold



      &:nth-child(3)
        .header
          position fixed
          top 0
          left 0
          z-index 5
          width 100%
          height 45px
          background #02a774
          display flex
          align-items center
          justify-content space-around
          color white
          font-size 22px
        .order-no-login
          width  66%
          margin 0 auto
          text-align center
          img
            margin-top 80px
            width 100%
          h3
            color #6a6a6a
            font-size 16px
            margin 5px 0
          .order-botton
            background #02a774
            color white
            border none
            width 100px
            height 35px
            border-radius 8px
            outline none
      &:nth-child(4)
        .header
          position fixed
          top 0
          left 0
          z-index 5
          width 100%
          height 45px
          background #02a774
          display flex
          align-items center
          justify-content space-around
          color white
          font-size 22px
        .profile-number
          margin-top 0.5px
          padding 15px 20px
          background #02a774
          clearFix()
          a
            display block
            clearFix()
            .profile-number-left
              float left
            .profile-image
              border-radius 50%
              overflow hidden
              background white
              .icon-person
                font-size 60px
                background  #e4e4e4
            .profile-number-right
              float left
              padding-left 20px
              padding-top 10px
              position relative
              width 76%
              p
                font-weight bold
                color #fff
                &.profile-info-top
                  font-size 18px
                  font-weight bold
                  color #fff
                &.profile-info-middle
                  margin-top 10px
                  font-size 14px
                .user-info
                  display inline-block
                  margin-left -15px
                  .iconfont
                    font-size 30px
                    vertical-align text-top
                .user-right
                  font-size 14px
                  margin-left -14px
                  vertical-align text-bottom
              .boult
                position absolute
                top 50%
                right 20px
                transform translateY(-50%)
                color #fff

        .info-data-list
          width 100%
          clearFix()
          a
            float left
            width 33%
            display flex
            flex-direction column
            align-items center
            background white
            .info-data-top
              font-size 30px
              font-weight bold
              padding 15px 0 10px 0
              span
                color #000000
                font-size 14px
            .info-data-bottom
              margin-bottom 10px
              font-size 14px
            &:nth-child(1)
              .info-data-top
                color #f90
            &:nth-child(2)
              .info-data-top
                color #ff5f3e
            &:nth-child(3)
              .info-data-top
                color #6ac20b
            &:nth-child(2)
              border-left 1px solid #e7e7e7
              border-right 1px solid #e7e7e7
        .profile-my-order
          width 100%
          margin-top 10px
          top-border-1px(#e3e3e3)
          a
            background white
            display block
            width 100%
            position relative
            clearFix()
            &.my-order
              &:nth-child(1)
                >span
                  color #02a774
              &:nth-child(2)
                >span
                  color #ff5f3e
              &:nth-child(3)
                >span
                  color #f90
              padding-left 15px
              box-sizing border-box
              >span
                float left
                font-size 50px
                position relative
                margin-top -10px
                margin-bottom 5px
                .iconfont
                  font-size 30px
              .my-order-div
                float left
                width 91%
                box-sizing border-box
                padding 18px 0
                bottom-border-1px(#e3e3e3)
                font-size 16px
                .arrow
                  float right
                  margin-right 20px
                  font-size 14px
                  color #e3e3e3

  .open
    display block
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    z-index 300
    background white
    .loginContainer
      width 80%
      margin 0 auto
      text-align center
      .loginInner
        position relative
        padding-top 70px
        .login-header
          .login-header-logo
            font-size 40px
            color #02a774
            font-weight bold
          .login_header_title
            margin-top 30px
            a
              margin 10px 10px 0px
              padding-bottom 5px
              font-weight bold
              &.active
                border-bottom 2px solid #02a774
                color #02a774
        .login-content
          width 100%
          margin-top 10px
          form
            div
              display none
              input
                width 100%
                height 50px
                border-radius 4px
                border 1px solid #ddd
                margin 10px 0
                outline #02a774
                padding-left 10px
                box-sizing border-box

                &:focus
                  border 1px solid #02a774
              p
                font-size 14px
                margin-bottom 30px
                color #999
                span
                  color #02a774
              &.login-on
                display block
            >section
              margin-top 20px
              .login_submit
                display block
                width 100%
                background #4cd96f
                border-radius 4px
                color white
                border none
                height 40px
              .about_us
                display: block;
                font-size: 12px;
                margin-top: 20px;
                text-align: center;
                color: #999
            .go-back
              position absolute
              left -20px
              top 15px


  .close
    display none

  footer
    top-border-1px(#ccc)
    width 100%
    height 50px
    position fixed
    bottom 0
    display flex
    background white
    .guide-item
      flex 1
      display flex
      flex-direction column
      align-items center
      justify-content space-around
      span:first-child
        .iconfont
          font-size 22px
      span:last-child
        font-size 14px
      &.active
        color #02a774




